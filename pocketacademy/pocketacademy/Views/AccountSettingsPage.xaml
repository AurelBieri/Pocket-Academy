<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pocketacademy.Views.AccountSettingsPage"
             NavigationPage.HasBackButton="False">

    <Grid>
        <StackLayout Grid.Row="0" 
                     Orientation="Vertical"
                     HorizontalOptions="Center"
                     VerticalOptions="Center"
                     Padding="16">
            <Label Text="Account Information" FontSize="Large" HorizontalOptions="Center" />

            <Label Text="Username:" HorizontalOptions="Center" />
            <Label x:Name="labelUsername" FontAttributes="Bold" HorizontalOptions="Center" />

            <Label Text="Email:" HorizontalOptions="Center" />
            <Label x:Name="labelEmail" FontAttributes="Bold" HorizontalOptions="Center" />

            <Button Text="Logout" Clicked="OnLogoutClicked" HorizontalOptions="Center" Margin="0,24,0,0"/>
        </StackLayout>

        <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="End" Padding="10" BackgroundColor="LightGray" Grid.Row="2">
            <Button Text="Home" Clicked="OnHomeClicked" HorizontalOptions="FillAndExpand"/>
            <Button Text="Account Settings" Clicked="OnAccountSettingsClicked" HorizontalOptions="FillAndExpand"/>
        </StackLayout>
    </Grid>

</ContentPage>